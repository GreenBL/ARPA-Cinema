<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/ticket_shape_with_corners.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color of the ticket -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Top-left corner notch -->
    <item android:left="0dp" android:top="0dp">
        <shape android:shape="oval">
            <size android:width="32dp" android:height="32dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="@android:color/black"/>
        </shape>
    </item>

    <!-- Top-right corner notch -->
    <item android:right="0dp" android:top="0dp">
        <shape android:shape="oval">
            <size android:width="32dp" android:height="32dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="@android:color/black"/>
        </shape>
    </item>

    <!-- Bottom-left corner notch -->
    <item android:left="0dp" android:bottom="0dp">
        <shape android:shape="oval">
            <size android:width="32dp" android:height="32dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="@android:color/black"/>
        </shape>
    </item>

    <!-- Bottom-right corner notch -->
    <item android:right="0dp" android:bottom="0dp">
        <shape android:shape="oval">
            <size android:width="32dp" android:height="32dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="@android:color/black"/>
        </shape>
    </item>

</layer-list>
